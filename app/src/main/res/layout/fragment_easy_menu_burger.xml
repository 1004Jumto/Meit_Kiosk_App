<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyMenuBurger">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_bigmac"
                    android:scaleType="centerCrop"
                    android:id="@+id/bigmac"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_bulgogi"
                    android:scaleType="centerCrop"
                    android:id="@+id/bulgogi"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_burger"
                    android:id="@+id/burger"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_crispyoriental"
                    android:id="@+id/crispyoriental"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_doublebulgogi"
                    android:id="@+id/doublebulgogi"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_goldenpotato"
                    android:id="@+id/goldenpotato"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_macspicyshanghai"
                    android:id="@+id/macspicyshanghai"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_quaterpounder"
                    android:id="@+id/quaterpounder"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="100dp">
                <ImageButton
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:src="@drawable/burger_supremeshrimp"
                    android:id="@+id/supremeshrimp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>