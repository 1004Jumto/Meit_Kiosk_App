<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mcdonald"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/generalmenu"
        android:layout_below="@id/mcdonald"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="일반 주문"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#DC2121"/>

    <Button
        android:layout_below="@id/generalmenu"
        android:id="@+id/easymenu"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="간편 주문"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#0476D1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="현재 조리 시간: 6분"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>